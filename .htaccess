# public_html/website_0cc51771/.htaccess

# 1. SET DEFAULT INDEX
DirectoryIndex index.html index.php

# BEGIN Newfold Headers
<IfModule mod_headers.c>
    Header set X-Newfold-Cache-Level "2"
</IfModule>
# END Newfold Headers

# BEGIN Newfold Browser Cache
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 24 hours"
    ExpiresByType text/html "access plus 2 hours"
    ExpiresByType image/jpg "access plus 24 hours"
    ExpiresByType image/jpeg "access plus 24 hours"
    ExpiresByType image/gif "access plus 24 hours"
    ExpiresByType image/png "access plus 24 hours"
    ExpiresByType text/css "access plus 24 hours"
    ExpiresByType text/javascript "access plus 24 hours"
    ExpiresByType application/pdf "access plus 1 week"
    ExpiresByType image/x-icon "access plus 1 year"
</IfModule>
# END Newfold Browser Cache

Options -Indexes

<IfModule mod_headers.c>
    Header set X-Endurance-Cache-Level "2"
    Header set X-nginx-cache "WordPress"
</IfModule>

########################################
# CUSTOM PRETTY URLS & REDIRECTS
########################################
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /

# -----------------------------------------------------
# A) CLEANUP REDIRECTS (Run these FIRST)
# -----------------------------------------------------

# 1. Redirect /index.html -> /
RewriteCond %{THE_REQUEST} \s/index\.html [NC]
RewriteRule ^index\.html$ / [R=301,L]

# 2. Redirect /pages/name.html -> /name
# (If someone visits the long link, force them to the short one)
RewriteCond %{THE_REQUEST} \s/pages/(about|service|fleet|contact|ourteam|blog)\.html [NC]
RewriteRule ^pages/(about|service|fleet|contact|ourteam|blog)\.html$ /%1 [R=301,L]

# 3. Redirect /name.html -> /name
RewriteCond %{THE_REQUEST} \s/(about|service|fleet|contact|ourteam|blog)\.html [NC]
RewriteRule ^(about|service|fleet|contact|ourteam|blog)\.html$ /$1 [R=301,L]

# -----------------------------------------------------
# B) IGNORE REAL FILES (Run this SECOND)
# If the request is for an existing image, css, or js file,
# stop here so we don't break the site assets.
# -----------------------------------------------------
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# -----------------------------------------------------
# C) INTERNAL MAPPING (Run this LAST)
# Connect the short URL to the actual file invisible
# -----------------------------------------------------
RewriteRule ^about/?$   pages/about.html   [L,NC]
RewriteRule ^service/?$ pages/service.html [L,NC]
RewriteRule ^fleet/?$   pages/fleet.html   [L,NC]
RewriteRule ^ourteam/?$ pages/ourteam.html [L,NC]
RewriteRule ^blog/?$    pages/blog.html    [L,NC]
RewriteRule ^contact/?$ pages/contact.html [L,NC]

</IfModule>
########################################

# BEGIN NFD EPC
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType text/html "access plus 2 hours"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresDefault "access plus 6 hours"
</IfModule>
# END NFD EPC

# BEGIN WordPress
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /
RewriteRule ^index\.php$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.php [L]
</IfModule>
# END WordPress

# php -- BEGIN cPanel-generated handler
<IfModule mime_module>
  AddHandler application/x-httpd-ea-php84___lsphp .php .php8 .phtml
</IfModule>
# php -- END cPanel-generated handler